<Window x:Class="DesktopAppWpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Analog Clock" Height="350" Width="350">
    <Grid>
        <Ellipse Stroke="Black" StrokeThickness="4" HorizontalAlignment="Center" VerticalAlignment="Center" Width="300" Height="300"/>
        <Line x:Name="hourHand" Stroke="Black" StrokeThickness="6" X1="150" Y1="150" X2="150" Y2="80" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Line.RenderTransform>
                <RotateTransform Angle="0"/>
            </Line.RenderTransform>
        </Line>
        <Line x:Name="minuteHand" Stroke="Black" StrokeThickness="4" X1="150" Y1="150" X2="150" Y2="50" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Line.RenderTransform>
                <RotateTransform Angle="0"/>
            </Line.RenderTransform>
        </Line>
        <Line x:Name="secondHand" Stroke="Red" StrokeThickness="2" X1="150" Y1="150" X2="150" Y2="30" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Line.RenderTransform>
                <RotateTransform Angle="0"/>
            </Line.RenderTransform>
        </Line>
    </Grid>
</Window>
